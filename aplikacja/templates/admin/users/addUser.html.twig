{% extends 'core/empty_admin.html.twig' %}
{% block title %}Stanowiska pracy{% endblock %}

{% block mainContent %}

    <div class="card">
    <div class="card-header">
        <h3 class="card-title">Edycja stanowiska pracy</h3>
    </div><!-- /.card-header -->
    {{ form_start(form) }}
    <div class="card-body">
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.roles) }}
            {{ form_widget(form.roles, {'attr': {'class': 'form-control select2'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.worker) }}
            {{ form_widget(form.worker, {'attr': {'class': 'form-control select2'}}) }}
        </div>

        <div class="form-group">
            <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                {{ form_widget(form.active, {'attr': {'class': 'custom-control-input'}}) }}
                {{ form_label(form.active, null, {'label_attr': {'class': 'custom-control-label'}}) }}
            </div>
        </div>

        {% set formErrors = form.vars.errors.form.getErrors(true) %}
        {% if formErrors|length %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-ban"></i> Błędy w formularzu</h5>
                <ul>
                    {% for error in formErrors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
    <div class="card-footer">
        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary float-right'}}) }}
    </div>
    {{ form_end(form) }}
{% endblock %}