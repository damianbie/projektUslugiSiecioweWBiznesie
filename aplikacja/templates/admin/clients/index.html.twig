                        <td>ID</td>
                        <td>Nazwa</td>
                        <td>NIP</td>
                        <td>REGON</td>
                        <td>telefon kontaktowy</td>
                        <td>Akcje</td>
                    </tr>
                {% endset %}
                {{ table_header }}
                </thead>
                <tbody>
                {% for c in companies %}
                    <tr>
                        <td> {{ c.id }} </td>
                        <td> {{ c.name }} </td>
                        <td> {{ c.nip }}</td>
                        <td> {{ c.regon }}</td>
                        <td> {{ c.phoneNumber }}</td>
                        <td>
                            <div class="btn-group">
                                <a type="button" class="btn btn-default" href="{{ path('admin_client_detalis', {id: c.id}) }}">Szczegóły</a>
                                <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu" role="menu" style="">
                                    <a class="dropdown-item" href="{{ path('admin_clients_edit', {id: c.id}) }}">Edytuj</a>
                                    <a class="dropdown-item text-danger" href="{{ path('admin_client_delete', {id: c.id}) }}">Usuń</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                {{ table_header }}
